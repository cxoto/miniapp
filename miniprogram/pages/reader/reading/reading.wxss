/* 阅读容器 */
.reading-container {
  min-height: 100vh;
  position: relative;
  transition: background-color 0.3s, color 0.3s;
  overflow-x: hidden;
  width: 100%;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-100%);
  transition: transform 0.3s ease;
  z-index: 100;
}

.nav-bar.visible {
  transform: translateY(0);
}

.nav-back {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nav-actions {
  display: flex;
  align-items: center;
}

.nav-btn {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.nav-btn .bookmarked {
  color: #f5a623;
}

/* 阅读内容区域 */
.content-area {
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.chapter-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
  text-align: center;
}

.text-content {
  text-align: justify;
  word-break: break-all;
}

.text-content text {
  white-space: pre-wrap;
}

.page-indicator {
  position: fixed;
  bottom: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #999;
}

/* 底部菜单栏 */
.bottom-menu {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding-bottom: env(safe-area-inset-bottom);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 100;
}

.bottom-menu.visible {
  transform: translateY(0);
}

.progress-section {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #eee;
}

.progress-text {
  width: 80rpx;
  font-size: 26rpx;
  color: #666;
}

.progress-slider {
  flex: 1;
  margin: 0 16rpx;
}

.menu-buttons {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
}

.menu-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 32rpx;
}

.btn-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #666;
}

/* 面板遮罩 */
.panel-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
  z-index: 200;
}

.panel-mask.visible {
  opacity: 1;
  visibility: visible;
}

/* 目录面板 */
.catalog-panel {
  position: fixed;
  top: 0;
  left: 0;
  width: 80%;
  height: 100vh;
  background-color: #fff;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  z-index: 201;
}

.catalog-panel.visible {
  transform: translateX(0);
}

.panel-header {
  padding: 24rpx 32rpx;
  padding-top: calc(24rpx + env(safe-area-inset-top));
  border-bottom: 1rpx solid #eee;
}

.panel-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.panel-tabs {
  display: flex;
}

.panel-tab {
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 32rpx;
  margin-right: 16rpx;
}

.panel-tab.active {
  color: #fff;
  background-color: #07c160;
}

.panel-content {
  flex: 1;
  overflow-y: auto;
}

.chapter-item {
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.chapter-item.active {
  color: #07c160;
  background-color: #f0fff4;
}

.chapter-name {
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.bookmark-item {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.bookmark-content {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.bookmark-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  display: flex;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 设置面板 */
.settings-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 201;
}

.settings-panel.visible {
  transform: translateY(0);
}

.settings-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.settings-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.settings-row {
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
}

.settings-label {
  font-size: 30rpx;
  color: #333;
}

.font-size-control {
  display: flex;
  align-items: center;
}

.size-btn {
  width: 72rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.size-value {
  width: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.line-height-options,
.page-mode-options {
  display: flex;
}

.lh-option,
.mode-option {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  margin-left: 16rpx;
}

.lh-option.active,
.mode-option.active {
  color: #07c160;
  border-color: #07c160;
  background-color: #f0fff4;
}

.bg-options {
  display: flex;
}

.bg-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 24rpx;
  border: 4rpx solid transparent;
}

.bg-option.active {
  border-color: #07c160;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 300;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #eee;
  border-top-color: #07c160;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #666;
}
