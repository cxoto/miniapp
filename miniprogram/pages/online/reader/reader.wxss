.online-reader {
  min-height: 100vh;
  position: relative;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}

/* 章节内容 */
.reader-content {
  padding: 40rpx;
  min-height: 100vh;
}

.chapter-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
  line-height: 1.6;
}

.chapter-text {
  line-height: 2;
  text-align: justify;
  white-space: pre-wrap;
  word-wrap: break-word;
  padding-bottom: 100rpx;
}

/* 底部控制面板 */
.control-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 999;
  padding-bottom: env(safe-area-inset-bottom);
}

.control-panel.show {
  transform: translateY(0);
}

/* 导航按钮 */
.chapter-nav {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  gap: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-btn {
  flex: 1;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.nav-btn.disabled {
  background: #ddd;
  color: #999;
}

.nav-btn:active:not(.disabled) {
  transform: scale(0.95);
}

.catalog-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

/* 阅读设置 */
.reader-settings {
  padding: 30rpx;
  background-color: #fff;
}

.setting-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.setting-row:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.font-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.control-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.control-btn:active {
  background-color: #e0e0e0;
}

.font-size-display {
  font-size: 28rpx;
  min-width: 60rpx;
  text-align: center;
  color: #333;
}

.color-options {
  display: flex;
  gap: 20rpx;
}

.color-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.color-option:active {
  transform: scale(0.9);
}

/* 目录弹窗 */
.catalog-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background-color: rgba(0, 0, 0, 0.5);
}

.catalog-content {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 70%;
  background-color: white;
  display: flex;
  flex-direction: column;
  animation: slideIn 0.3s;
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

.catalog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.catalog-title {
  font-size: 32rpx;
  font-weight: bold;
}

.catalog-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.catalog-list {
  flex: 1;
  height: 0;
  overflow-y: auto;
}

.catalog-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.3s;
}

.catalog-item.active {
  background-color: #f0f0ff;
  border-left: 6rpx solid #667eea;
}

.catalog-item:active {
  background-color: #f5f5f5;
}

.chapter-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.catalog-item.active .chapter-name {
  color: #667eea;
  font-weight: bold;
}

.chapter-info {
  font-size: 22rpx;
  color: #999;
  margin-left: 20rpx;
}
