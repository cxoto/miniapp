.book-search {
  min-height: 100vh;
  background-color: #f5f5f5;
  overflow-x: hidden;
  width: 100%;
  box-sizing: border-box;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  height: 70rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 100%;
}

.clear-icon {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.search-btn {
  margin-left: 20rpx;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 搜索结果 */
.search-results {
  padding: 20rpx 30rpx;
}

.result-count {
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #666;
}

/* 书籍列表 */
.book-list {
  margin-top: 20rpx;
}

.book-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.book-main {
  display: flex;
  padding: 24rpx;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.book-author {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.book-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-meta {
  display: flex;
  gap: 20rpx;
  font-size: 22rpx;
  color: #999;
}

.book-actions {
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: flex-end;
}

.add-btn {
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 26rpx;
  transition: all 0.3s;
}

.add-btn.added {
  background: #ddd;
  color: #999;
}

/* 空结果 */
.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* 初始状态 */
.init-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 30rpx;
}

.init-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.init-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.hot-keywords {
  width: 100%;
}

.hot-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  display: block;
}

.keyword-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.keyword {
  padding: 16rpx 32rpx;
  background-color: white;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #667eea;
  border: 1rpx solid #667eea;
}

/* 搜索中状态 */
.searching-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}
