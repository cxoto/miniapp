/**index.wxss - iOS Style Home**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #1c1c1e 0%, #2c2c2e 50%, #1c1c1e 100%);
}

.ios-home {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 状态栏占位 */
.status-bar-placeholder {
  height: env(safe-area-inset-top);
  min-height: 44rpx;
}

/* 顶部问候 */
.header {
  padding: 20rpx 40rpx;
  padding-top: 10rpx;
}

.greeting {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
}

.date {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 8rpx;
}

/* 搜索栏 */
.search-bar {
  margin: 20rpx 40rpx;
  height: 72rpx;
  background-color: rgba(255, 255, 255, 0.12);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-placeholder {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* App 网格滚动区域 */
.app-grid-scroll {
  flex: 1;
  padding-bottom: 40rpx;
}

/* App 网格 */
.app-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 24rpx;
  justify-content: flex-start;
}

/* App 项目 */
.app-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

/* App 图标 */
.app-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  position: relative;
  overflow: hidden;
}

.icon-inner {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-emoji {
  font-size: 52rpx;
}

/* 不同 App 的图标背景 */
.reader-icon {
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
}

.todo-icon {
  background: linear-gradient(135deg, #0078D4 0%, #106EBE 100%);
}

.notes-icon {
  background: linear-gradient(135deg, #FFD60A 0%, #FFCA28 100%);
}

.express-icon {
  background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
}

.online-reader-icon {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.settings-icon {
  background: linear-gradient(135deg, #6B7280 0%, #4B5563 100%);
}

.more-icon {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
}

.more-icon .icon-emoji {
  color: rgba(255, 255, 255, 0.5);
}

/* App 名称 */
.app-name {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

/* 小组件区域 */
.widgets-section {
  padding: 20rpx 40rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 24rpx;
  display: block;
}

/* 小组件 */
.widget {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
}

.widget-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.widget-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.reading-widget .widget-icon {
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
}

.todo-widget .widget-icon {
  background: linear-gradient(135deg, #0078D4 0%, #106EBE 100%);
}

.widget-title {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.widget-content {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.widget-stat {
  font-size: 72rpx;
  font-weight: 700;
  color: #ffffff;
  margin-right: 12rpx;
}

.widget-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.widget-footer {
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  padding-top: 16rpx;
}

.widget-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 底部指示器 */
.home-indicator {
  width: 268rpx;
  height: 10rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 5rpx;
  margin: 16rpx auto;
  margin-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

/* 点击效果 */
.app-item:active .app-icon {
  transform: scale(0.92);
  opacity: 0.8;
}

.widget:active {
  transform: scale(0.98);
  opacity: 0.9;
}
